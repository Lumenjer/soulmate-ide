{
  "name": "Soulmate",
  "version": "1.0.18",
  "main": "src/electron.js",
  "license": "MIT",
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.8.2",
    "@hot-loader/react-dom": "^16.13.0",
    "avr8js": "^0.9.1",
    "bonjour": "^3.5.0",
    "electron-auth0-login": "^1.3.0",
    "electron-is-dev": "^1.2.0",
    "electron-notarize": "^0.3.0",
    "electron-updater": "^4.3.1",
    "history": "^4.10.1",
    "jwt-decode": "^2.2.0",
    "keytar": "^5.0.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.0.0",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-icons": "^3.10.0",
    "react-monaco-editor": "^0.36.0",
    "react-router-dom": "^5.2.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.8",
    "semantic-ui-css": "^2.4.1",
    "use-light-switch": "^1.0.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@svgr/parcel-plugin-svgr": "^5.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.0",
    "electron-builder": "^22.7.0",
    "npm-version": "^1.1.0",
    "parcel-bundler": "^1.12.4",
    "typescript": "^3.9.3",
    "wait-on": "^5.0.0"
  },
  "alias": {
    "@auth0/auth0-spa-js": "./node_modules/@auth0/auth0-spa-js/dist/lib/auth0-spa-js.cjs.js",
    "react-dom": "@hot-loader/react-dom"
  },
  "scripts": {
    "react-start": "parcel -p 3000 index.html",
    "react-build": "yarn build-worker && parcel build index.html --out-dir build --public-url ./ --no-source-maps",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \" \"yarn build-worker-dev\"",
    "electron-build": "electron-builder",
    "build": "yarn react-build && yarn electron-build",
    "build-worker": "parcel build node_modules/monaco-editor/esm/vs/editor/editor.worker.js -d build --no-source-maps",
    "build-worker-dev": "parcel build node_modules/monaco-editor/esm/vs/editor/editor.worker.js --no-source-maps",
    "release": "AWS_PROFILE=soulmate-ide-updates yarn version --patch && yarn react-build && yarn electron-build --publish always",
    "clean": "rm -r ./build"
  },
  "build": {
    "afterSign": "scripts/notarize.js",
    "mac": {
      "publish": {
        "provider": "s3",
        "bucket": "soulmate-ide-updates"
      },
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "provisioningProfile": "Soulmate_macOS.provisionprofile"
    },
    "dmg": {
      "sign": false
    },
    "directories": {
      "buildResources": "assets"
    },
    "appId": "com.elliottkember.soulmate",
    "files": [
      "src/icon.icns",
      "src/icon.png",
      "src/electron.js",
      "src/preload.js",
      "src/auth.js",
      "build/**/*"
    ]
  }
}
